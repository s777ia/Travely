<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <link rel="stylesheet"
    href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
  <title>Travely</title>
  <style>
    body {
      font-family: 'Poppins', sans-serif;
    }

    .navbar {
      padding: 20px;
    }

    .nav-link {
      margin: 0 10px;
      /* Adjust this value to increase or decrease the gap between each links*/
    }

    .nav-link:hover {
      color: HSL(32, 100%, 60%) !important;
    }

    .nav-link.active {
      color: #ff8c00 !important;
    }

    .sign-up {
      color: white;
      border: 1px solid #ff8c00;
      background-color: #ff8c00;
      border-radius: 50px;
      width: 100%;
      text-align: center;
    }

    .sign-up:hover {
      color: #ff8c00;
      border: 1px solid #ff8c00;
      background-color: white;
      border-radius: 50px;
    }

    .material-symbols-outlined {
      font-variation-settings:
        'FILL' 0,
        'wght' 400,
        'GRAD' 0,
        'opsz' 24;
      padding-left: 30px;
      color: #ff8c00;
      font-size: 36px;
    }

    .btn {
      display: block;
      width: 20%;
      text-align: center;
      text-decoration: none;
      margin-top: 20px;
      padding: 10px;
      border: #ff8c00 solid 1px;
      border-radius: 50px;
      background-color: #ff8c00;
      color: white;
      margin-left: auto;
      /* Automatically calculate left margin */
      margin-right: auto;
      /* Automatically calculate right margin */
    }

    .btn:hover {
      color: #ff8c00;
      background-color: white;
      border-color: #ff8c00;
    }
  </style>



  </style>
</head>

<body>
  <nav class="navbar navbar-expand-lg navbar-light">
    <div class="container-fluid" style="padding-left: 70px;">
      <a class="navbar-brand" href="/" style="font-weight: bold;">Travely</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav me-auto">
          <li class="nav-item">
            <a class="nav-link active" href="/">Home</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/moreProduct">Products</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/aboutUs">About Us </a>
          </li>
        </ul>
        <ul class="navbar-nav">
          <li class="nav-item">
            <a class="nav-link" href="/addProduct" onclick="addProductBtn(event, '/addProduct')">Add Product</a>
          </li>
          <li class="nav-item">
            <a class="nav-link sign-up" href="/signUp">Sign Up</a>
          </li>
        </ul>
      </div>
    </div>
  </nav>

  <!-- Product Details -->
  <div class="container mt-5">
    <div class="text-center">
      <h2>Product Details</h2>
    </div>
    <br>
    <% if (product) { %> <!-- Check if product data exists -->
      <div class="card mb-3" style="max-width: 900px; margin: auto; margin-top: 50px;">
        <div class="row g-0">
          <div class="col-md-4">
            <img src="/images/<%= product.image %>" class="img-fluid rounded-start" alt="<%= product.name %>"
              style="margin-right: 20px;">
          </div>
          <div class="col-md-8 d-flex align-items-center">
            <div class="card-body" style="margin-left: 20px;">
              <h5 class="card-title">
                <%= product.name %>
              </h5>
              <p class="card-text"><b>Type:</b>
                <%= product.type %>
              </p>
              <p class="card-text"><b>Country:</b>
                <%= product.country %>
              </p>
              <p class="card-text"><b>Price:</b> SGD <%= product.price %>
              </p>
            </div>
          </div>
        </div>
      </div>
      <% } else { %>
        <p class="text-center">No Product found.</p>
        <% } %> <!-- End of check for product data -->
  </div>
  <div class="btnContainer">
    <button type="button" class="btn" onclick="updateBtn(event, '/editProduct/<%= product.product_id %>')">Update
      Destination</button>
    <button type="button" class="btn" onclick="deleteBtn()">Delete Destination</button>
  </div>
  </div>

  <script>

    function deleteBtn() {
      const staticPassword = 'admin@1006'; // Set your static password here
      const enteredPassword = prompt('Please enter the password to update the product:');

      if (enteredPassword === staticPassword) {
        if (confirm('Are you sure you want to delete this product?')) {
          window.location.href = '/deleteProduct/<%= product.product_id %>';
        }
      } else {
        alert('Incorrect password. You are not authorized to update the product.');
      }
    }

    function updateBtn(event, url) {
      event.preventDefault(); // Prevent the default action

      const staticPassword = 'admin@1006'; // Set your static password here
      const enteredPassword = prompt('Please enter the password to update the product:');

      if (enteredPassword === staticPassword) {
        window.location.href = url; // Navigate to the URL if password matches
      } else {
        alert('Incorrect password. You are not authorized to delete the product.');
      }
    }
  </script>
</body>

</html>