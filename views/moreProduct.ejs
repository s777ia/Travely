<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <link rel="stylesheet"
    href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
  <title>Travely</title>
</head>
<style>
  body {
    font-family: 'Poppins', sans-serif;
  }

  .navbar {
    padding: 20px;
  }

  .nav-link {
    margin: 0 10px;
    /* Adjust this value to increase or decrease the gap between each links*/
  }

  .nav-link:hover {
    color: HSL(32, 100%, 60%) !important;
  }

  .nav-link.active {
    color: #ff8c00 !important;
  }

  .sign-up {
    color: white;
    border: 1px solid #ff8c00;
    background-color: #ff8c00;
    border-radius: 50px;
    width: 100%;
    text-align: center;
  }

  .sign-up:hover {
    color: #ff8c00;
    border: 1px solid #ff8c00;
    background-color: white;
    border-radius: 50px;
  }

  .carousel-item img {
    height: 600px;
    width: 90% !important;
    margin: auto;
    object-fit: cover;
    /* Ensure the image covers the area without being distorted */
    border-radius: 50px;
  }

  .destination-card {
    border: none;
  }

  .destination-card img {
    border-radius: 25px;
    height: 180px;
    width: 100%;
    object-fit: cover;
    /* Ensures images cover the area without being stretched */
  }

  .destination-card .card-body {
    padding: 0.5rem;
  }

  .destination-card .card-title {
    margin-top: 0.5rem;
  }

  .destination-card .card-text {
    font-size: 0.8rem;
    color: #666;
  }

  .row {
    margin-top: 50px;
    margin-left: auto;
    margin-right: auto;
  }

  .see-all-btn {
    display: block;
    width: 20%;
    text-align: center;
    text-decoration: none;
    margin-top: 50px;
    padding: 10px;
    border: #ff8c00 solid 1px;
    border-radius: 50px;
    background-color: #ff8c00;
    color: white;
    margin-left: auto;
    /* Automatically calculate left margin */
    margin-right: auto;
    /* Automatically calculate right margin */
  }

  .see-all-btn:hover {
    color: #ff8c00;
    background-color: white;
    border-color: #ff8c00;
  }

  .newsletter-container {
    background-color: #f8f9fa;
    padding: 30px;
  }

  .input-group input {
    width: 300px;
  }

  .footer {
    color: white;
    background-color: #ff8c00;
    height: 50px;
    display: flex;
    align-items: center;
    justify-content: center;
  }
</style>

<body>
  <!-- Nav Bar -->
  <nav class="navbar navbar-expand-lg navbar-light">
    <div class="container-fluid" style="padding-left: 70px;">
      <a class="navbar-brand" href="/" style="font-weight: bold;">Travely</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav me-auto">
          <li class="nav-item">
            <a class="nav-link" href="/">Home</a>
          </li>
          <li class="nav-item">
            <a class="nav-link active" href="/moreProduct">Products</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/aboutUs">About Us </a>
          </li>
        </ul>
        <ul class="navbar-nav" style="padding-right: 70px;">
          <li class="nav-item">
            <a class="nav-link" href="/addProduct" onclick="addProductBtn(event, '/addProduct')">Add Product</a>
          </li>
          <li class="nav-item">
            <a class="nav-link sign-up" href="/signUp">Sign Up</a>
          </li>
        </ul>
      </div>
    </div>
  </nav>

  <!-- Carousell -->

  <div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
    <div class="carousel-inner">
      <div class="carousel-item active">
        <img class="d-block w-100" src="https://static.independent.co.uk/2024/01/05/15/newFile-6.jpg" alt="First slide">
      </div>
      <div class="carousel-item">
        <img class="d-block w-100" src="https://www.classictravel.lk/frontend/images/home/home-main.png"
          alt="Second slide">
      </div>
      <div class="carousel-item">
        <img class="d-block w-100"
          src="https://images.squarespace-cdn.com/content/v1/5a3bb03b4c326d76de73ddaa/1613140783562-ARLGSYE2Z1NTWD07GOHI/The+Common+Wanderer-9888.jpg"
          alt="Third slide">
      </div>
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Next</span>
    </button>
  </div>

  <!-- Products -->

  <div class="container mt-5" style="padding: 20px;">
    <h3 style="font-weight: bold;">All Products</h3>
    <p>Here are some ideas for your next trip</p>
    <div class="row">
      <% product.forEach(prod=> { %>
        <div class="col-md-4">
          <div class="card destination-card">
            <a href="/product/<%= prod.product_id %>"><img src="images/<%= prod.image %>" class="card-img-top"
                alt="<%= prod.name %>"></a>
            <div class="card-body">
              <small class="text-muted">
                <%= prod.type %> • <%= prod.country %>
              </small>
              <h5 class="card-title"><b>
                  <%= prod.name %>
                </b><br>
              </h5>
              </p>
              <p>From SGD <%= prod.price %>
              </p>
            </div>
          </div>
        </div>
        <% }); %>
    </div>
  </div>

  <!-- Footer -->

  <footer class="footer" style="margin-top: 50px;">
    <p class="mb-0">© 2024 Travely</p>
  </footer>

  <script>
    function addProductBtn(event, url) {
      event.preventDefault(); // Prevent the default action

      const staticPassword = 'admin@1006'; // Set your static password here
      const enteredPassword = prompt('Please enter the password to update the product:');

      if (enteredPassword === staticPassword) {
        window.location.href = url; // Navigate to the URL if password matches
      } else {
        alert('Incorrect password. You are not authorized to add a product.');
      }
    }
  </script>

</body>

</html>